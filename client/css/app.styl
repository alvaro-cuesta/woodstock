// Nib docs:     http://visionmedia.github.com/nib

@import 'nib'

// Main

body, html
  height 100%

body
  font normal 1em sans-serif
  background linear-gradient(top, #eee, #fff)
  text-align center

p
  margin-bottom 1em

a
  color #000a68

h1
  font-size 1.5em
  font-weight normal
  margin 1.5em
  color #333
  text-shadow 1px 1px 2px white

#game
  border 1px solid #ccc
  width 700px
  text-align left
  margin 0px auto
  padding 15px
  border-radius 5px
  #nick
    border none
    box-shadow inset 0 0 2px #777
    border-radius 5px
    width 690px
    padding 5px

#chat
  border 1px solid #ccc
  width 700px
  text-align left
  margin 10px auto
  padding 15px
  border-radius 5px
  #message, #chatlog
    border none
    box-shadow inset 0 0 2px #777
    border-radius 5px
  #message
    width 690px
    padding 5px
  #chatlog
    width 700px
    background-color white
    margin 5px 0
    p
      font-size 0.9em
      color #000a68
      padding 3px 9px
      margin 0
    p:first-child
      padding-top 9px
    p:last-child
      padding-bottom 9px
    span.nick
      float left
      text-align left
      font-weight bold
      margin-right 3px
    span.time
      color #666
      float right
      width 70px
      text-align right
      font-size 0.7em